<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Permissions"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="noOption needs the following permissions to enforce distraction-free focus at system level."
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Accessibility -->
        <Button
            android:id="@+id/btnAccessibility"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Enable Accessibility Service"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1E88E5"
            android:layout_marginBottom="14dp"/>

        <!-- Battery -->
        <Button
            android:id="@+id/btnBattery"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Disable Battery Optimization"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#424242"
            android:layout_marginBottom="14dp"/>

        <!-- App Settings -->
        <Button
            android:id="@+id/btnAppSettings"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Allow Background Activity"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#424242"
            android:layout_marginBottom="14dp"/>

        <!-- Usage Access -->
        <Button
            android:id="@+id/btnUsageAccess"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Enable Usage Access"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#424242"
            android:layout_marginBottom="14dp"/>

        <!-- Autostart -->
        <Button
            android:id="@+id/btnAutostart"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Enable Auto-start in Background"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#424242"
            android:layout_marginBottom="32dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A2A2A"
            android:layout_marginBottom="18dp"/>

        <!-- Trust text -->
        <TextView
            android:id="@+id/tvTrust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trust us."
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>

        <!-- How to use (clickable + underline) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="28dp">

            <TextView
                android:id="@+id/tvHowTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to use"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:clickable="true"
                android:focusable="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/text_underline_blue"/>
        </LinearLayout>

        <!-- Continue (LAST) -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"/>

        <!-- Bottom spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>

</ScrollView>
