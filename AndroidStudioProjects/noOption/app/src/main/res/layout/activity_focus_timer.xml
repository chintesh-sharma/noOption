<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Focus Schedule"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set the time when distractions will be blocked"
        android:textSize="13sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start Time Button -->
    <Button
        android:id="@+id/btnStartTime"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Select Start Time"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#1E88E5"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- End Time Button -->
    <Button
        android:id="@+id/btnEndTime"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Select End Time"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#1565C0"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/btnStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Info Text -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Once saved, focus mode will automatically activate every day during this time."
        android:textSize="12sp"
        android:textColor="#B0BEC5"
        android:layout_marginTop="18dp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveSchedule"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Save Focus Schedule"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00C853"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
