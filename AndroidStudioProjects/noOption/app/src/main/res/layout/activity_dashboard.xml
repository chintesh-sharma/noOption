<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TITLE -->
        <TextView
            android:text="Focus Dashboard"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <!-- DAILY SCREEN TIME -->
        <TextView
            android:id="@+id/tvScreenTime"
            android:text="Today's Screen Time: 0 min"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- FOCUS STATUS -->
        <TextView
            android:id="@+id/tvFocusStatus"
            android:text="Focus Mode: OFF"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPermanentApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permanent Apps"
            android:textSize="14sp"
            android:layout_marginTop="12dp"/>


        <TextView
            android:id="@+id/tvWeeklySummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weekly Screen Time"
            android:padding="12dp"
            android:textSize="14sp"/>


        <!-- BUTTONS -->
        <Button
            android:id="@+id/btnEditBlocked"
            android:text="Edit Blocked Apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnPermanentApps"
            android:text="View Permanent Apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnReschedule"
            android:text="Reschedule Focus Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>


        <!-- ============================= -->
        <!-- ðŸ” Monthly Setup Reset Area -->
        <!-- ============================= -->

        <TextView
            android:id="@+id/tvLastReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last reset: Not yet"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tvResetInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(updates in 1 month)"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnMonthlyReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET SETUP"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:layout_margin="16dp" />

    </LinearLayout>
</ScrollView>
