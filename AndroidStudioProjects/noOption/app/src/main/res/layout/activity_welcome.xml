<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0D12"
    android:padding="36dp"
    android:gravity="center_horizontal">

    <!-- TOP SPACE -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- TITLE -->
    <TextView
        android:text="Welcome to"
        android:textColor="#8F95A3"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <TextView
        android:text="noOption"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:letterSpacing="0.08"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <!-- TAGLINE -->
    <TextView
        android:text="A strict focus system.\nNo distractions. No excuses."
        android:textColor="#9AA0AE"
        android:textSize="15sp"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <!-- SLOGAN -->
    <TextView
        android:text="Your phone doesn’t control you.\nYou control your phone."
        android:textColor="#7F8596"
        android:textSize="14sp"
        android:lineSpacingExtra="6dp"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <!-- PRIVACY POLICY (UNDERLINED + CLICKABLE FEEL) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tvPrivacy"
            android:text="By continuing, you agree to our Privacy Policy"
            android:textColor="#5B7CFF"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"/>

        <!-- Underline -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5B7CFF"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- BOTTOM SPACE -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- CONTINUE -->
    <LinearLayout
        android:id="@+id/layoutContinue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="→"
            android:textColor="#5B7CFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
