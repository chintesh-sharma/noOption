<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="20dp">

    <!-- ================= TITLE ================= -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Website Blocking Time"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= SUBTITLE ================= -->

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Set a schedule to block distracting websites"
        android:textSize="13sp"
        android:textColor="#B0B0B0"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= START TIME ================= -->

    <Button
        android:id="@+id/btnWebStartTime"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="SELECT START TIME"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:backgroundTint="#1E88E5"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= END TIME ================= -->

    <Button
        android:id="@+id/btnWebEndTime"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="SELECT END TIME"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:backgroundTint="#1565C0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnWebStartTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= INFO TEXT ================= -->

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Once saved, focus mode will automatically activate every day during this time."
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnWebEndTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= SAVE (GREEN) ================= -->

    <Button
        android:id="@+id/btnSaveWebTimer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="SAVE FOCUS SCHEDULE"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#00C853"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= SKIP ================= -->

    <Button
        android:id="@+id/btnSkipWebTimer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Skip"
        android:textColor="#BDBDBD"
        android:textSize="14sp"
        android:backgroundTint="#1C1C1C"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSaveWebTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
