    <style name="Base.Theme.NoOption" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Brand colors -->
        <item name="colorPrimary">#0A0F1F</item>       <!-- dark blue-black -->
        <item name="colorPrimaryVariant">#0A0F1F</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Accent blue -->
        <item name="colorSecondary">#2979FF</item>
