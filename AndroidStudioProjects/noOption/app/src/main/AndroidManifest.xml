<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- REQUIRED -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoOption">

    <activity
            android:name=".HowToUseActivity"
            android:exported="false" />
        <activity
            android:name=".PrivacyPolicyActivity"
            android:exported="false" />
        <activity
            android:name=".SetupCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:resizeableActivity="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- ========================= -->
        <!-- NORMAL ACTIVITIES -->
        <!-- ========================= -->
        <activity
            android:name=".WebsiteTimerActivity"
            android:exported="false"
            android:resizeableActivity="false" />
        <activity
            android:name=".PermanentWebsiteSelectionActivity"
            android:exported="false"
            android:resizeableActivity="false" />
        <activity
            android:name=".PermanentAppsViewActivity"
            android:exported="false"
            android:resizeableActivity="false" />
        <activity
            android:name=".FocusTimerActivity"
            android:exported="false"
            android:resizeableActivity="false" />
        <activity
            android:name=".PermanentSelectionActivity"
            android:exported="false"
            android:resizeableActivity="false" />
        <activity
            android:name=".AppSelectionActivity"
            android:exported="false"
            android:resizeableActivity="false" />
        <activity
            android:name=".PermissionSetupActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:resizeableActivity="false" />
        <activity
            android:name=".OnboardingActivity"
            android:exported="false"
            android:resizeableActivity="false" /> <!-- ========================= -->
        <!-- ðŸ”’ BLOCK SCREEN (CRITICAL) -->
        <!-- ========================= -->
        <activity
            android:name=".BlockActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:resizeableActivity="false"
            android:screenOrientation="portrait" /> <!-- ========================= -->
        <!-- DASHBOARD -->
        <!-- ========================= -->
        <activity
            android:name=".DashboardActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleTask"
            android:resizeableActivity="false" /> <!-- ========================= -->
        <!-- APP LAUNCHER -->
        <!-- ========================= -->
        <activity
            android:name=".MainActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:resizeableActivity="false" /> <!-- ========================= -->
        <!-- ACCESSIBILITY SERVICE -->
        <!-- ========================= -->
        <service
            android:name=".MyAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_config" />
        </service> <!-- ========================= -->
        <!-- DEVICE ADMIN -->
        <!-- ========================= -->
        <receiver
            android:name=".MyDeviceAdminReceiver"
            android:exported="false"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_config" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>